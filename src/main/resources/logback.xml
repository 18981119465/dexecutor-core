<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<property name="APP_HOME" value="c:/logs" />
	
	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>
				%d{HH:mm:ss.SSS} [%thread] %-5level %class{36}.%M %L - %msg%n 
			</Pattern>
		</layout>
	</appender>
	<appender name="FILE-AUDIT"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${APP_HOME}/debug.log</file>
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<Pattern>
				%d{HH:mm:ss.SSS} [%thread] %-5level %class{36}.%M %L - %msg%n 
			</Pattern>
		</encoder>

		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- rollover daily -->
			<fileNamePattern>${APP_HOME}/archived/debug.%d{yyyy-MM-dd}.%i.log
                        </fileNamePattern>
			<timeBasedFileNamingAndTriggeringPolicy
				class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<maxFileSize>10MB</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
		</rollingPolicy>

	</appender>
	
	<logger name="java.util.concurrent" level="info"
		additivity="false">
		<appender-ref ref="FILE-AUDIT" />
		<appender-ref ref="CONSOLE" />
	</logger>

	<logger name="ch.qos.logback" level="error"
		additivity="false">
		<appender-ref ref="FILE-AUDIT" />
		<appender-ref ref="CONSOLE" />
	</logger>

	<logger name="com.nadeem.executor" level="debug"
		additivity="false">
		<appender-ref ref="FILE-AUDIT" />
		<appender-ref ref="CONSOLE" />
	</logger>

	<root level="error">
		<appender-ref ref="FILE-AUDIT" />
		<appender-ref ref="CONSOLE" />
	</root>

</configuration>